{
  "deno.enable": true,
  "deno.enablePaths": [
    "runtime",
    "deploy",
    "examples",
    "subhosting",
    "lint",
    "orama",
    "404",
    "markdown-it",
    "middleware",
    "reference",
    "reference-gen",
    "services",
    "static",
    "styleguide",
    "_components"
  ],
  "editor.defaultFormatter": "denoland.vscode-deno",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "editor.detectIndentation": true,
  "[markdown]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[css]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "css.customData": [
    ".vscode/tailwind.json"
  ],
  "cSpell.words": [
    "lume",
    "Orama",
    "subhosting"
  ]
}
